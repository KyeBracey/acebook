<p>
<%= simple_format(@post.message)%>
</p>

<h2>Comments</h2>
<ul>
<% @post.comments.each do |comment| %>
<li>
<%= comment.body %>
</li>
<% end %>
</ul>

Add a comment
<%= form_for([@post, @post.comments.build]) do |form| %>
  <p>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.submit "Post comment" %>
  </p>
<% end %>

<%= form_for([@post, @post.likes.build]) do |form| %>
  <p>
    <%= form.submit "Like" %>
  </p>
<% end %>


<%= link_to posts_path do %>
  Back to Posts
<% end %>
